{
    "manifest_version": 3,
    "name": "Canvas Assignment Sorter",
    "version": "1.0",
    "description": "Sort and organize your Canvas LMS assignments effortlessly.",
    "permissions": ["activeTab", "storage", "notifications"],
    "host_permissions": ["https://canvas.instructure.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  